<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:statusBarColor">@color/status</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/dark</item>
        <item name="colorOnSecondary">@color/light</item>
    </style>

    <style name="lightFab">
        <item name="colorSecondary">@color/light</item>
        <item name="colorAccent">@color/light</item>
        <item name="colorOnPrimary">@color/light</item>
        <item name="colorOnSecondary">@color/colorPrimaryDark</item>
    </style>

    <style name="CVTopRound" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/radius</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeTopRight">@dimen/radius</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="CVBottomRound" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">@dimen/radius</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">@dimen/radius</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:background="@color/backGround"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
    <ScrollView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backGround"
    >
        <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
        >
            <ImageView
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="16dp"
                    app:srcCompat="@drawable/ic_sms"
                    android:tint="@color/light"
                    android:layout_width="@dimen/imgBig"
                    android:layout_height="@dimen/imgBig"/>
            <TextView
                    android:textStyle="bold"
                    android:id="@+id/txtTtlGetPhone"
                    android:layout_marginBottom="32dp"
                    android:textSize="@dimen/txt"
                    android:textColor="@color/txtLight"
                    android:text="لطفا کد تایید را در کادر زیر وارد کنید"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <com.google.android.material.card.MaterialCardView
                    app:shapeAppearanceOverlay="@style/CVTopRound"
                    app:cardBackgroundColor="@color/backGround"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <LinearLayout
                        android:padding="16dp"
                        android:layout_marginTop="@dimen/radius"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:textColorHint="@color/colorPrimaryLight"
                            app:hintTextColor="@color/colorPrimary"
                            app:boxStrokeColor="@color/colorPrimaryDark"
                            app:counterTextColor="@color/colorPrimary"
                            app:hintEnabled="true"
                            android:hint="کد تایید"
                            app:counterEnabled="true"
                            app:counterMaxLength="6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputEditText
                                android:maxLength="6"
                                android:id="@+id/txtGetConfCode"
                                android:inputType="number"
                                android:textColor="@color/txtDark"
                                android:textSize="@dimen/txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnNextConfPhone"
                            android:backgroundTint="@color/colorAccent"
                            android:text="@string/next"
                            android:textColor="@color/txtLight"
                            android:textSize="@dimen/txt"
                            android:layout_marginTop="16dp"
                            android:padding="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:id="@+id/txtInfoConfirmPhone"
                            android:text="کد تایید لحضاتی پیش به شماره همراه 09157474087 ارسال شده است"
                            android:textSize="@dimen/txt"
                            android:drawableStart="@drawable/ic_info"
                            android:drawablePadding="8dp"
                            android:layout_marginTop="32dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
            android:background="@color/light2"
            android:layout_width="match_parent" android:layout_height="wrap_content">
    <com.google.android.material.button.MaterialButton
            android:id="@+id/btnResendConfCode"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:text="ارسال مجدد کد تایید !"
            android:textColor="@color/txtDark"
            android:textSize="@dimen/txt"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
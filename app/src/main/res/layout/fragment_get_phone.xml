<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        android:background="@color/backGround"
>
    <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
    >
        <ImageView
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                app:srcCompat="@drawable/ic_person"
                android:tint="@color/light"
                android:layout_width="@dimen/imgBig"
                android:layout_height="@dimen/imgBig"/>
        <TextView
                android:textStyle="bold"
                android:id="@+id/txtTtlGetPhone"
                android:layout_marginBottom="32dp"
                android:textSize="@dimen/txt"
                android:textColor="@color/light"
                android:text="ایجاد حساب کاربری"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <com.google.android.material.card.MaterialCardView
                app:shapeAppearanceOverlay="@style/CVTopRound"
                app:cardBackgroundColor="@color/backGround"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:padding="16dp"
                    android:layout_marginTop="@dimen/radius"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:hintEnabled="true"
                        app:hintTextColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimaryLight"
                        app:helperTextTextColor="@color/colorPrimary"
                        app:counterTextColor="@color/colorPrimary"
                        app:boxStrokeColor="@color/colorPrimaryDark"
                        android:hint="شماره همراه"
                        app:helperTextEnabled="true"
                        app:helperText="شماره همراه خودرا وارد کنید"
                        app:counterEnabled="true"
                        app:counterMaxLength="11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                            android:maxLength="11"
                            android:id="@+id/txtGetPhone"
                            android:inputType="number"
                            android:textColor="@color/txtDark"
                            android:textSize="@dimen/txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnNextGetPhone"
                        android:text="@string/next"
                        android:textColor="@color/txtLight"
                        android:textSize="@dimen/txt"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="@color/colorAccent"
                        android:padding="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:text="@string/phoneInfo"
                        android:textSize="@dimen/txt"
                        android:drawableStart="@drawable/ic_info"
                        android:drawablePadding="8dp"
                        android:layout_marginTop="32dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>
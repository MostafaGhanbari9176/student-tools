<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/LLSearchParent"
        android:layoutDirection="rtl"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">
    <LinearLayout
            android:id="@+id/LLHeadSearch"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                app:srcCompat="@drawable/ic_search"
                android:tint="@color/light"
                android:layout_width="@dimen/imgBig"
                android:layout_height="@dimen/imgBig"
                android:id="@+id/imgSearchHead"
        />
        <TextView
                android:textStyle="bold"
                android:id="@+id/txtTtlSearch"
                android:layout_marginBottom="32dp"
                android:textSize="@dimen/txt"
                android:textColor="@color/txtLight"
                android:text="جستوجو"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/rounded_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/LLHeadSearch"
            android:id="@+id/LLSearchListParent">
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/RVSearch"/>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/TILTxtSearch"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:hintEnabled="true"
            app:hintTextColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimaryLight"
            app:helperTextTextColor="@color/colorPrimary"
            app:counterTextColor="@color/colorPrimary"
            app:boxStrokeColor="@color/colorPrimaryDark"
            app:helperTextEnabled="true"
            app:counterEnabled="true"
            android:layout_width="match_parent"
            android:layout_below="@id/LLHeadSearch"
            android:layout_height="wrap_content"
    >
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtSearch"
                android:textColor="@color/txtDark"
                android:textSize="@dimen/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
            android:alpha="0"
            android:orientation="vertical"
            android:background="@drawable/ic_linear_progress"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:id="@+id/LLSearchProgress"
            android:layout_above="@id/LLSearchListParent"
    />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layoutDirection="rtl"
              android:background="@color/backGround"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">
    <ImageView
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_width="@dimen/imgBig"
            android:layout_height="@dimen/imgBig"
            />
    <TextView
            android:text="هویج"
            android:textSize="@dimen/txtBig"
            android:textColor="@color/dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />
    <com.google.android.material.button.MaterialButton
            android:padding="8dp"
            android:textColor="@color/light"
            app:backgroundTint="@color/colorAccent"
            android:textSize="@dimen/txt"
            android:layout_marginTop="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnSignUp" android:id="@+id/btnChoseSignUp"/>

    <com.google.android.material.button.MaterialButton
            android:padding="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16sp"
            android:textColor="@color/dark"
            app:strokeColor="@color/dark"
            android:textSize="@dimen/txt"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnLogIn" android:id="@+id/btnChoseLogIn"/>
</LinearLayout>
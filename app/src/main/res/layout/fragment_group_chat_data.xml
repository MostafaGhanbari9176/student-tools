<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/backGround"
        android:layout_width="match_parent"
        android:layoutDirection="rtl"
        android:layout_height="match_parent"
>
    <RelativeLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                app:cardBackgroundColor="@color/light"
                app:cardCornerRadius="@dimen/radiusSmall"
                android:id="@+id/txtAdminGroupChatData"
        >
            <TextView
                    android:drawablePadding="2dp"
                    android:padding="8dp"
                    android:gravity="center"
                    android:textSize="@dimen/txtSmall"
                    android:textColor="@color/txtDark"
                    android:text="مدیر"
                    android:drawableEnd="@drawable/ic_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />
        </androidx.cardview.widget.CardView>
        <LinearLayout
                android:gravity="top|center_horizontal"
                android:padding="16dp"
                android:layout_below="@id/txtAdminGroupChatData"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LLHeadOtherProfile">
            <ir.pepotec.app.awesomeapp.view.uses.CircularIMG
                    app:srcCompat="@drawable/ic_profile_def"
                    app:rectCorner="@dimen/radius"
                    android:layout_width="@dimen/imgBig"
                    android:layout_height="@dimen/imgBig"
                    android:id="@+id/imgGroupChatData"
            />
            <TextView
                    android:visibility="gone"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:text=""
                    android:gravity="start"
                    android:textSize="@dimen/txt"
                    android:textColor="@color/txtLight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtInfoGroupChatData"/>
        </LinearLayout>
        <LinearLayout
                android:paddingTop="@dimen/radius"
                android:orientation="vertical"
                android:layout_below="@id/LLHeadOtherProfile"
                android:background="@drawable/rounded_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/LLInfOtherProfile">
            <TextView
                    android:text=""
                    android:id="@+id/txtChatSubjectGroupChatData"
                    android:textSize="@dimen/txt"
                    android:textColor="@color/txtDark"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="...."
                    android:id="@+id/txtCreateDateGroupChatData"
                    android:textSize="@dimen/txt"
                    android:textColor="@color/txtDark"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="نحوه عضویت : فقط از طریق دعوت"
                    android:id="@+id/txtInviteModeGroupChatData"
                    android:textSize="@dimen/txt"
                    android:textColor="@color/txtDark"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                    android:layout_margin="16dp"
                    android:id="@+id/btnLeftGroupChatData"
                    android:text="خارج شدن از گروه"
                    android:padding="8dp"
                    android:textColor="@color/txtLight"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            />

            <LinearLayout
                    android:id="@+id/LLAdminButtonGroupChatData"
                    android:layout_marginTop="16dp"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            >
                <com.google.android.material.button.MaterialButton
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:id="@+id/btnAddMemberGroupChatData"
                        android:text="افزودن عضو"
                        android:padding="8dp"
                        android:textColor="@color/txtLight"
                        android:backgroundTint="@color/colorAccent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                />
                <com.google.android.material.button.MaterialButton
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:id="@+id/btnEditGroupChatData"
                        android:text="ویرایش"
                        android:padding="8dp"
                        android:textColor="@color/txtLight"
                        android:backgroundTint="@color/colorAccent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                />
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/LLMemberListGroupChatData"
            >
                <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                              android:background="@color/colorAccent" android:layout_weight="1"/>
                <TextView
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:text="اعضاء گروه"
                        android:textSize="@dimen/txt"
                        android:textColor="@color/txtDark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                />
                <LinearLayout android:layout_width="match_parent" android:layout_height="1dp"
                              android:background="@color/colorAccent" android:layout_weight="1"/>
            </LinearLayout>
            <ProgressBar
                    android:id="@+id/pbarGroupChatData"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/RVMemberGroupChatData"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
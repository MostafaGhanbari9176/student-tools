<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layoutDirection="rtl"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_alignParentEnd="true"
                android:layout_width="96dp"
                android:layout_height="96dp"
                app:srcCompat="@drawable/img"
                android:id="@+id/imgFriendProfile"/>
        <ir.pepotec.app.awesomeapp.view.student.profile.ProfileHead
                android:id="@+id/friendProfileHead"
                android:layout_width="match_parent"
                android:layout_height="180dp">
        </ir.pepotec.app.awesomeapp.view.student.profile.ProfileHead>
    </RelativeLayout>
    <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/profileViewParent" android:alpha="1">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_marginTop="16dp"
                    android:textSize="@dimen/txt"
                    android:textColor="@color/colorPrimaryLight"
                    android:text="9431443"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            />
            <TextView
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_marginTop="8dp"
                    android:textSize="@dimen/txt"
                    android:textColor="@color/colorPrimaryLight"
                    android:text="مصطفی قنبری"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            />
            <TextView
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_marginTop="8dp"
                    android:textSize="@dimen/txt"
                    android:textColor="@color/colorPrimaryLight"
                    android:text="09157474087"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
            />
            <TextView
                    android:background="@drawable/txt_border"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_marginTop="8dp"
                    android:textSize="@dimen/txt"
                    android:textColor="@color/colorPrimaryLight"
                    android:text="Lorem ipsum, or lipsum as it is sometimes known, is dummy text used in laying out print, graphic or web designs. The passage is attributed to an unknown typesetter in the 15th century who is thought to have scrambled parts of Cicero's De Finibus Bonorum et Malorum for use in a type specimen book."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
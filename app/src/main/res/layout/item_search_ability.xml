<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="@dimen/radius"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<RelativeLayout
        android:layoutDirection="rtl"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
            android:id="@+id/imgSearchAbility"
            app:srcCompat="@drawable/ic_ability"
            android:layout_width="@dimen/img"
            android:layout_height="@dimen/img"
    />
    <TextView
            android:id="@+id/txtSubjectSearchAbility"
            android:layout_marginStart="16dp"
            android:textColor="@color/dark"
            android:textSize="@dimen/txt"
            android:text="Subject"
            android:gravity="center"
            android:layout_alignTop="@id/imgSearchAbility"
            android:layout_alignBottom="@id/imgSearchAbility"
            android:layout_toEndOf="@id/imgSearchAbility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    />
    <TextView
            android:id="@+id/txtDescriptionSearcAbility"
            android:padding="16dp"
            android:text="@string/test"
            android:textColor="@color/dark"
            android:textSize="@dimen/txt"
            android:layout_below="@id/imgSearchAbility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    />
</RelativeLayout>
</androidx.cardview.widget.CardView>
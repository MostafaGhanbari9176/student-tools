<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_margin="2dp"
        android:layoutDirection="rtl"
        app:cardBackgroundColor="@color/dialogBack"
        app:cardCornerRadius="@dimen/radius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
            android:gravity="start"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="@dimen/btnCloseSize"
                android:layout_height="@dimen/btnCloseSize"
                app:srcCompat="@drawable/btn_close"
                android:id="@+id/btnCloseDialogEL"/>
        <TextView
                android:visibility="gone"
                android:id="@+id/txtAllDialogEL"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:drawablePadding="16dp"
                android:drawableEnd="@drawable/ic_done_animate"
                android:padding="8dp"
                android:textSize="@dimen/txt"
                android:text="Hello !"
                android:textColor="@color/dialogText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ProgressBar
                android:id="@+id/PBEL"
                android:layout_marginBottom="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        />
        <TextView
            android:visibility="gone"
            android:id="@+id/txtFriendDialogEL"
            android:layout_marginTop="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:drawablePadding="16dp"
            android:drawableEnd="@drawable/ic_un_done_animate"
            android:padding="8dp"
            android:textSize="@dimen/txt"
            android:text="Hello !"
            android:textColor="@color/dialogText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
                android:visibility="gone"
                android:id="@+id/txtInfoDialogEL"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:drawablePadding="16dp"
                android:drawableStart="@drawable/ic_info"
                android:padding="8dp"
                android:textSize="@dimen/txtSmall"
                android:lineSpacingExtra="@dimen/lineSpace"
                android:text="@string/infoEyeLevel"
                android:textColor="@color/dialogText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
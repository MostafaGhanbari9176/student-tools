<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layoutDirection="rtl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
    <androidx.cardview.widget.CardView
            android:layoutDirection="rtl"
            android:layout_marginBottom="0.5dp"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:orientation="vertical"
            app:cardCornerRadius="@dimen/radiusVSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ir.pepotec.app.awesomeapp.view.uses.CircularIMG
                    android:layout_margin="16dp"
                    app:srcCompat="@drawable/ic_profile_def"
                    app:rectCorner="@dimen/radius"
                    android:layout_width="64dp"
                    android:layout_height="64dp" android:id="@+id/imgItemStudent"/>
            <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:textColor="@color/light"
                        android:padding="8dp"
                        android:text="مصطفی قنبری"
                        android:textSize="@dimen/txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtNameItemStudent"/>
                <TextView
                        android:textColor="@color/light"
                        android:padding="8dp"
                        android:text="9431443"
                        android:textSize="@dimen/txtSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtSIdItemStudent"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
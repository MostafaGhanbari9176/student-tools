<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_marginBottom="8dp"
        android:layout_marginStart="4dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/itemSendParent"
        android:layoutDirection="rtl"
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|top"
        android:background="@drawable/send">
    <ir.pepotec.app.awesomeapp.view.uses.CircularIMG
            app:topLeft="@dimen/radius"
            app:topRight="@dimen/radiusVSmall"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/img"
            android:layout_height="@dimen/img"
            android:src="@drawable/ic_download"
            android:id="@+id/imgItemSendFile"/>
    <TextView
            android:id="@+id/txtSendItem"
            android:textSize="@dimen/txt"
            android:textColor="@color/colorPrimaryDark"
            android:paddingEnd="12dp"
            android:paddingBottom="8dp"
            android:text="@string/aboutMeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    </TextView>
    <LinearLayout
            android:id="@+id/LLDateItemSend"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="@dimen/imgVSmall"
                android:layout_height="@dimen/imgVSmall"
                app:srcCompat="@drawable/ic_done_all"
                android:id="@+id/imgSeen"
        />
        <TextView
                android:gravity="end"
                android:text="1397/02/21    22:25"
                android:textColor="@color/colorPrimaryLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtDateItemSend"/>
    </LinearLayout>
</LinearLayout>
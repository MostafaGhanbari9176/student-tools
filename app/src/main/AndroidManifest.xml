<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ir.pepotec.app.awesomeapp">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
            android:name=".view.uses.App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
                android:windowSoftInputMode="stateHidden"
                android:name=".view.account.ActivityAccount"
                android:label="@string/app_name"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:windowSoftInputMode="stateHidden"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme"
                android:name=".view.student.ActivityStudent"/>
        <activity
                android:windowSoftInputMode="stateHidden"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme"
                android:name="ir.pepotec.app.awesomeapp.view.student.profile.activityProfile.ActivityProfile"/>
        <activity
                android:windowSoftInputMode="stateHidden"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme"
                android:name=".view.main.ActivityMain"/>
        <activity
                android:windowSoftInputMode="stateHidden"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme"
                android:name=".view.student.ability.activityAbility.ActivityAbility"/>
        <activity
                android:windowSoftInputMode="stateHidden"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme"
                android:name=".view.main.search.activitySearch.ActivitySearch"/>
        <activity android:name=".view.student.chat.messageList.ActivityMessageList"/>
        <activity android:name=".view.file.ActivityFile"/>
        <service android:name=".view.student.chat.ServiceChat"/>
    </application>

</manifest>